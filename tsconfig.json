{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": false,
    "esModuleInterop": true,
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@services/*": ["./src/services/*"],
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
  },
  "include": ["./src"],

}